---
import { toAttributeString } from 'astro/dist/runtime/server/render/util';

export interface Props {
	url: string;
	thumbnail: string;
	title: string;
	description: string;
	date: string;
	tags: string[];
}

const { url, thumbnail, title, description, date, tags } = Astro.props;
---

<a href={url} class="flex flex-wrap wrap w-full sm:flex-nowrap relative">
	<div class="flex flex-col flex-1 space-y-1">
		<span class="w-full text-2xl">{title}</h2>
		<span class="w-full text-md">{date}</span>
		<div class="flex py-1 space-x-2">
		{  tags.map((t) => {
					return <span class="border border-white pr-1 p-1 rounded">{t.replace('#', '').toLowerCase()}</span>	
				})
		}
		</div>
		<div class="bg-white h-px w-full bottom-0 left-0"></div>
	</div>
</a>
