---
import 'normalize.css/normalize.css'
import Nav from '../components/Nav.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<title>{title}</title>
		<!-- UA-155315616-1 -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=UA-155315616-1"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag(){dataLayer.push(arguments);}
			gtag('js', new Date());
			gtag('config', 'UA-155315616-1');
		</script>

	</head>
	<body>
		<div id="content">
			<Nav/>
			<slot />
		</div>
		<footer>
			<img src="/assets/socials/linkedin.png" />
			<img src="/assets/socials/twitter.png" />
			<img src="/assets/socials/reddit.png" />
		</footer>
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap');

	html {
		background-color: black;
		color: white;
		font-family: 'Roboto', sans-serif;
	}

	body {
		display: flex;
		flex-direction: column;
		align-items: center;
		position: relative;
		width: 100%;
		margin: auto;
		font-size: 16px;
		line-height: 1.4;

	}

	#content {
		position: relative;
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		width: calc(100% - 24px);
		max-width: 1280px;
		margin: 0px 12px;
	}

	footer {
		display: flex;
		justify-content: center;
		width: 100%;
	}

	footer > img {
		max-width: 32px;
		border: 1px solid black;
		margin: 12px 12px;
	}

	:root {
  	--bg-color: #000000;
  	--text-color: #FFFFFF;
  	--accent-color: #0A0A0A;
	}	


</style>
